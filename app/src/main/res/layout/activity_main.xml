<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.support.design.testapp.MainActivity">

    <Button
        android:id="@+id/btnAppBarCollapsePin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AppBarCollapsePin" />

    <Button
        android:id="@+id/btnBottomSheetBehaviorWithInsets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BottomSheetBehaviorWithInsets"
        app:layout_constraintTop_toBottomOf="@id/btnAppBarCollapsePin" />

    <Button
        android:id="@+id/btnSnacTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SnacTrans"
        app:layout_constraintTop_toBottomOf="@id/btnBottomSheetBehaviorWithInsets" />

    <Button
        android:id="@+id/btnBottomSheetBehaviour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BottomSheetBehaviour"
        app:layout_constraintTop_toBottomOf="@id/btnSnacTrans" />

    <Button
        android:id="@+id/btnFabAndSnackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FabAndSnackbar"
        app:layout_constraintTop_toBottomOf="@id/btnBottomSheetBehaviour" />

    <Button
        android:id="@+id/btnFabFollowsWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FabFollowsWidget"
        app:layout_constraintTop_toBottomOf="@id/btnFabAndSnackbar" />

    <Button
        android:id="@+id/btnCollapsingToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CollapsingToolbar"
        app:layout_constraintTop_toBottomOf="@id/btnFabFollowsWidget" />

    <Button
        android:id="@+id/btnCustomBehavior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CustomBehavior"
        app:layout_constraintTop_toBottomOf="@id/btnCollapsingToolbar" />

</android.support.constraint.ConstraintLayout>
